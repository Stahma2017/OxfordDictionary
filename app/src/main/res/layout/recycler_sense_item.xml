<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp">
        <TextView
            android:id="@+id/senseTW"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:textColor="#000000"
            app:layout_constraintEnd_toStartOf="@+id/senseStar"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageButton
            android:id="@+id/senseStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_action_star"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:textSize="15dp"
            android:id="@+id/senseExampleTW"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/senseStar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/senseTW"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>